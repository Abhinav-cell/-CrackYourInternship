class Solution{
    public:
    long long findMinDiff(vector<long long> a, long long n, long long m){
    sort(a.begin(),a.end());
     long long min=INT_MAX;
    for(int i=0;(i+m-1)<a.size();i++)
    {
        if(a[i+m-1]-a[i]<min);
        min=a[i+m-1]-a[i];
    }
    return min;
    
    } 
    
};

